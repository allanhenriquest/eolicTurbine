    (-0.15  0.00  1.0)   // 4 (teto frontal esquerdo)
    ( 0.15  0.00  1.0)   // 5 (teto frontal direito)
    ( 0.15  0.30  1.0)   // 6 (teto traseiro direito)
    (-0.15  0.30  1.0)   // 7 (teto traseiro esquerdo)
