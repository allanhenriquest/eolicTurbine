    (-0.26  0.26  -0.011)   // 3 (chão traseiro esquerdo)
    (-0.26  -0.26  1.01)   // 4 (teto frontal esquerdo)
    ( 0.26  -0.26  1.01)   // 5 (teto frontal direito)
    ( 0.26  0.26  1.01)   // 6 (teto traseiro direito)
    (-0.26  0.26  1.01)   // 7 (teto traseiro esquerdo)
